<div class="form">
    <svg class="logo"><use xlink:href="#icon_user"/></svg>
    <div class="row">
		<svg class="icon name"><use xlink:href="#icon_name"/></svg>
        <input type="text" name=username class="input name" autocapitalize=none placeholder="Username" required />
    </div>
    <div class="row">
		<svg class="icon pass"><use xlink:href="#icon_pass"/></svg>
        <input type="password" name=userpass class="input pass" placeholder="Password" required />
    </div>
    <p class="comment error"></p>
    <button type="button" class="submit niko_transit">Sign in</button>
    <p class="comment">Don't have an account? &nbsp;<a class=niko_transit href="#signup">Sign up</a></p>
</div>
