<div class="form">
	<svg class="logo"><use xlink:href="#icon_user"/></svg>
    <div class="row">
		<svg class="icon name"><use xlink:href="#icon_name"/></svg>
        <input type="text" name=name class="input name" placeholder="Full Name" required />
    </div>
    <div class="row">
		<svg class="icon name"><use xlink:href="#icon_name"/></svg>
        <input type="text" name=username class="input name" placeholder="Username" required />
    </div>
    <div class="row">
		<svg class="icon pass"><use xlink:href="#icon_pass"/></svg>
        <input type="password" name=userpass class="input pass" placeholder="Password" required />
    </div>
    <div class="row">
		<svg class="icon pass"><use xlink:href="#icon_pass"/></svg>
        <input type="password" name=userconfirm class="input pass" placeholder="Retype password" required />
    </div>
    <p class="comment error"></p>
    <button type="button" class="submit niko_transit">Sign up</button>
    <p class="comment">or, &nbsp;<a class=niko_transit href="#signin">Cancel</a></p>
</div>
